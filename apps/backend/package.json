{
  "name": "ai-interview-prep-backend",
  "private": true,
  "version": "0.1.0",
  "description": "AWS Lambda backend for AI-powered interview preparation",
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc -p tsconfig.lambda.json",
    "dev": "concurrently \"ts-node src/local/server.ts\" \"ts-node src/local/chat-server.ts\"",
    "dev:main": "ts-node src/local/server.ts",
    "dev:chat": "ts-node src/local/chat-server.ts",
    "start": "concurrently \"node dist/src/local/server.js\" \"node dist/src/local/chat-server.js\"",
    "start:lambda": "node dist/lambda/src/lambda/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prebuild:lambda": "npm run clean",
    "docker:build": "docker build -t ai-interview-prep-backend .",
    "docker:build:lambda": "docker build --build-arg BUILD_TARGET=lambda -t ai-interview-prep-backend:lambda .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.25.2",
    "@cxm6467/ai-interview-prep-types": "^1.5.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "openai": "^5.12.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/node": "^7.25.0",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/aws-lambda": "^8.10.152",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
