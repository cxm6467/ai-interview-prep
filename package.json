{
  "name": "ai-interview-prep-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "AI-powered interview preparation with strategic question generation, role-based coaching, comprehensive skills analysis, and AWS deployment",
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:frontend": "npm run dev --workspace=ai-interview-prep-frontend",
    "dev:backend": "npm run dev --workspace=ai-interview-prep-backend",
    "build": "npm run build --workspace=ai-interview-prep-frontend && npm run build --workspace=ai-interview-prep-backend",
    "build:frontend": "npm run build --workspace=ai-interview-prep-frontend",
    "build:backend": "npm run build --workspace=ai-interview-prep-backend",
    "build:lambda": "npm run build:lambda --workspace=ai-interview-prep-backend",
    "lint": "npm run lint --workspace=ai-interview-prep-frontend",
    "lint:fix": "npm run lint:fix --workspace=ai-interview-prep-frontend",
    "commitlint": "commitlint --edit",
    "prepare": "if [ -z \"$CI\" ]; then husky; fi"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@cxm6467/ai-interview-prep-types": "^1.5.6"
  }
}
